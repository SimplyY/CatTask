<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        -->

        <!-- Actionbar color -->
        <item name="colorPrimary">#00bdd6</item>
        <item name="colorAccent">#02210A</item>

        <!--Window color-->
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>


    </style>

    <style name="myCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="fragmentLinearLayoutStyle">
        <item name="android:layout_marginLeft">@dimen/fragment_maginleft</item>
        <item name="android:layout_marginRight">@dimen/fragment_maginright</item>
    </style>



    <style name="createTaskTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/create_task_text_size</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.1</item>
    </style>
    <style name="numberPickerStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>




</resources>